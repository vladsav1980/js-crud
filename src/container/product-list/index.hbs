{{!
Це код container файлу для index сторінки,
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/"
}}

<main>

  <section>
    <div class="form">
      <h1 class="form__title">Products List</h1>
      <div class="products-list">
        {{#with data.products}}
        {{#if isEmpty}}
        <mark>Products list is empty</mark>
        {{else}}

        {{#each list}}
        <div class="form__content">
          <div class="form__subtitle">{{name}}</div>
          <div>{{description}}</div>
          <div class="id">ID: {{id}}</div>
          <div class="form__content--main">
            <div class="form__subtitle">{{price}}₴</div>
            <a href="/product-edit?id={{id}}" class="link">Edit</a>
          </div>

        </div>



        {{/each}}

        {{/if}}
        {{/with}}

      </div>
      <a href="/product-create" class="form__button">Add new product</a>
    </div>
  </section>


</main>


