{{!
Це код container файлу для index сторінки,
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/"
}}

<main>
  <section>
    <div class="form">
      <h1 class="form__title">Create User</h1>
      <form method="POST" action="/user-create">
        <div class="form__content">
          <div class="form__field">
            <input type="email" name="email" class="form__input" required>
            <label for="email" class="form__label">Email address:</label>
          </div>
          <div class="form__field">
            <input type="login" name="login" class="form__input" required>
            <label for="login" class="form__label">Nickname:</label>
          </div>
          <div class="form__field">
            <input type="password" name="password" class="form__input" required>
            <label for="password" class="form__label">Password:</label>
          </div>
          <button class="form__button">Create</button>
        </div>
      </form>
    </div>
  </section>

  <section>
    <div class="form">
      <h1 class="form__title">Users List</h1>
      <div class="user-list">
        {{#with data.users}}
        {{#if isEmpty}}
        <mark>Users list is empty</mark>
        {{else}}
        <ul>
          {{#each list}}
          <li>
            {{email}} | {{login}} | {{id}} <a href="/user-delete?id={{id}}">(delete)</a>
          </li>
          {{/each}}
        </ul>
        {{/if}}
        {{/with}}
      </div>
    </div>
  </section>

  <main>
    <section>
      <div class="form">
        <h1 class="form__title">Update User's Email</h1>
        <form method="POST" action="/user-update">
          <div class="form__content">
            <div class="form__field">
              <input type="id" name="id" class="form__input" required>
              <label for="id" class="form__label">ID:</label>
            </div>
            <div class="form__field">
              <input type="email" name="email" class="form__input" required>
              <label for="email" class="form__label">New email address:</label>
            </div>
            <div class="form__field">
              <input type="password" name="password" class="form__input" required>
              <label for="password" class="form__label">Password:</label>
            </div>
            <button class="form__button">Update email</button>
          </div>
        </form>
      </div>
    </section>
  </main>


